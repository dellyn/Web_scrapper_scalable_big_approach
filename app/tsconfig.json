{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#libraries/*": [
        "../js-libraries/@core/*",
        "../js-libraries/*"
      ],
      "#company/*": ["../company/*"],
      "#packages/*": ["../js-packages/*"],
      "#components/*": ["../react-components/*"],
      "#modules/*": ["./modules/*"],
      "#logic/*": ["./logic/*"]
    },
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "**/*.js",
    "**/*.mjs",
    "node_modules",
    "tmp"
  ],
  "extends": "../js-packages/tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ]
}
